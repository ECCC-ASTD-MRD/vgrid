echo "Acquiring compilation tools"

. version.dot

case "${ORDENV_PLAT}" in

   ubuntu-12.04-amd64-64)
      BH_MAKE=make
      BH_HOST=pollux
      BH_MODE=intel
      VGRID_COMPILER=intel13sp1u2
      HPCS_BASE=hpcs/201402/02/base
      HPCS_COMP=hpcs/201402/02/${VGRID_COMPILER}
      RPN_LIB=rpn/libs/15.2
      VGRID_FFLAGS='-openmp -fp-model source  -warn all'
      VGRID_CFLAGS='-openmp -fp-model precise -w3'
      . ssmuse-sh -d ${HPCS_BASE} -d ${HPCS_COMP} -d ${RPN_LIB}
      :;;

   ubuntu-14.04-amd64-64)
      BH_MAKE=make
      BH_HOST=einstein
      BH_MODE=intel
      VGRID_COMPILER=intel13sp1u2
      HPCS_BASE=hpcs/201402/02/base
      HPCS_COMP=hpcs/201402/02/${VGRID_COMPILER}
      RPN_LIB=rpn/libs/15.2
      VGRID_FFLAGS='-openmp -fp-model source  -warn all'
      VGRID_CFLAGS='-openmp -fp-model precise -w3'
      . ssmuse-sh -d ${HPCS_BASE} -d ${HPCS_COMP} -d ${RPN_LIB}
      :;;

   aix-7.1-ppc7-64)
      BH_MAKE=gmake
      r.use gmake as make
      BH_HOST=hadar
      BH_MODE=xlf13
      COMPILER=xlf_13.1.0.10
      HPCS_BASE=hpcs/201402/02/base
      HPCS_COMP=hpcs/ext/${COMPILER}
      RPN_LIB=rpn/libs/15.2
      VGRID_FFLAGS=''
      VGRID_CFLAGS=''
      . ssmuse-sh -d ${HPCS_BASE} -d ${HPCS_COMP} -d ${RPN_LIB}
      :;;

   "") echo "ERROR: variable ORDENV_PLAT not set"
       echo "       Please review setup.dot for your platform"
       :;;

    *) echo platform ${ORDENV_PLAT} not suported, please review setup.dot
       :;;
esac
