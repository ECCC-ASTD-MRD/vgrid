
LINUX_COMP=intel13sp1u2
#LINUX_COMP=pgi1401
#LINUX_COMP=pgi9xx

unset FFLAGS_INTEL

if [ ${BASE_ARCH} = AIX-powerpc7 ];then

   . ssmuse-sh \
      -d hpcs/201402/02/base\
      -d hpcs/ext/xlf_13.1.0.10\
      -d rpn/libs/15.2

else

   s.use make as gmake

   case ${LINUX_COMP} in
      intel13sp1u2). ssmuse-sh \
                    -d hpcs/201402/02/base\
                    -d hpcs/201402/02/intel13sp1u2\
                    -d rpn/libs/15.2
                 export FFLAGS_INTEL='-fp-model source'
		 :;;
         pgi1401). ssmuse-sh \
	            -d hpcs/201402/02/base\
                    -d hpcs/201402/02/pgi1401\
                    -d rpn/libs/15.2
		 :;;

              *) echo "Add compiler ${LINUX_COMP} in case ";;
   esac

fi

echo
export PLATFORM=$(ssm platforms | awk '{print $1}')
export RCOMPILE=s.compile
export BH_MAKE=gmake
