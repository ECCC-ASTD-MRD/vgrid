
LINUX_COMP=intel13sp1u2
#LINUX_COMP=pgi1401
#LINUX_COMP=pgi9xx

if [ ${BASE_ARCH} = AIX-powerpc7 ];then

   . ssmuse-sh \
      -d hpcs/201402/00/base\
      -d hpcs/ext/xlf_13.1.0.10\
      -d rpn/libs/15.1

else

   s.use make as gmake

   case ${LINUX_COMP} in
      intel13sp1u2). ssmuse-sh \
                    -d hpcs/201402/01/base\
                    -d hpcs/201402/01/intel13sp1u2\
                    -d rpn/libs/15.1
		 :;;
         pgi1401). ssmuse-sh \
	            -d hpcs/201402/01/base\
                    -d hpcs/201402/01/pgi1401\
                    -d rpn/libs/15.1
		 :;;

         pgi9xx). ssmuse-sh \
	            -d hpcs/13b/03/base\
                    -d rpn/libs/4.0
                 . s.ssmuse.dot pgi9xx devtools
                 export RMN_EXT=_014
		 :;;
              *) echo "Add compiler ${LINUX_COMP} in case ";;
   esac

fi

echo
export PLATFORM=$(ssm platforms | awk '{print $1}')
export RCOMPILE=s.compile
export BH_MAKE=gmake
