
ifeq ($(BASE_ARCH),$(EC_ARCH))
   $(info ERROR: please setup the compilation environment by typing the folowing:)
   $(info . ../src/setup.dot)
   $(error )
endif

LEFENCE=
EFENCE=
ifeq ($(USE_EFENCE),1)
   LEFENCE=-lefence
   EFENCE=efence
endif

DESCRIP_PATH = ../src

%.o: %.F90
	s.f90 -c $(MY_FFLAGS) $(FFLAGS) -L$(DESCRIP_PATH) -I$(DESCRIP_PATH) $(LEFENCE) $<

%.o: %.c
	s.cc -c  $(MY_CFLAGS) $(CFLAGS) -L$(DESCRIP_PATH) -I$(DESCRIP_PATH) $(LEFENCE) $<

%.o: %.cpp
	s.cc -c  $(MY_CFLAGS) $(CFLAGS) -L$(DESCRIP_PATH) -I$(DESCRIP_PATH) $(LEFENCE) $<

OBJECTS = unit_testing.o c_ut_report.o

UNIT_TEST_F: $(OBJECTS) UNIT_TEST_F.F90 $(DESCRIP_PATH)/libvgrid.a
	# Ne trmake touve pas msg avec commande suivnate (ajouter  UNIT_TEST_F.o a liste OBJECTS = pour tester)
	# s.f90 $(OBJECTS) -o UNIT_TEST_F -I$(DESCRIP_PATH) -L$(DESCRIP_PATH) -lrmn -vgrid $(OPENMP) $(MY_FFLAGS) $(FFLAGS)
	s.compile $(OPENMP) -optf "=$(MY_FFLAGS) $(FFLAGS)" -includes $(DESCRIP_PATH) -src UNIT_TEST_F.F90 -o UNIT_TEST_F -obj $(OBJECTS) -libpath $(DESCRIP_PATH) $(GFORTRAN_LIB) -libappl vgrid -librmn $(EFENCE) -libsys stdc++

UNIT_TEST_C: $(OBJECTS) UNIT_TEST_C.c $(DESCRIP_PATH)/libvgrid.a
	s.compile $(OPENMP) -optc "=$(MY_CFLAGS) $(CFLAGS)" -includes $(DESCRIP_PATH) -src UNIT_TEST_C.c -o UNIT_TEST_C -bidon c -main UNIT_TEST_C -obj $(OBJECTS) -libpath $(DESCRIP_PATH) $(GFORTRAN_LIB) -libappl vgrid -librmn $(EFENCE) -libsys stdc++

$(DESCRIP_PATH)/libvgrid.a: $(DESCRIP_PATH)/*.cpp $(DESCRIP_PATH)/*.hpp $(DESCRIP_PATH)/*.h
	cd ../src ;\
	make genlib;

clean:
	rm -f *.f90 *.o *.mod
