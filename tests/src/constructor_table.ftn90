program constructor

  use vGrid_Descriptors, only: vgrid_descriptor,vgd_new,vgd_get,operator(==)
  use Unit_Testing, only: ut_report

  implicit none

  type(vgrid_descriptor) :: vgrid,vgrid_rebuilt
  integer :: lu=0,lutxt=69
  integer :: stat,ip1,ip2
  integer :: fnom,fstouv,fstfrm
  logical :: ok
  real(kind=8), dimension(:,:,:), pointer :: table

  stat=fnom(lu,"data/dm_5002_from_model_run","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort
  endif
  open(unit=lutxt,file='data/dm_5002_ips.txt',status='OLD')
  read(lutxt,*) ip1,ip2
  close(lutxt)

  ! Construct a new set of 3D coordinate descriptors
  stat = vgd_new(vgrid,unit=lu,format="fst",ip1=ip1,ip2=ip2)
  stat = vgd_get(vgrid,'VTBL',table)
  stat = vgd_new(vgrid_rebuilt,table)
  if (vgrid_rebuilt == vgrid) then
     stat = 0
  else
     stat = -1
  endif
  call ut_report(stat,'Grid_Descriptors, rebuild from table')

  stat=fstfrm(lu)

end program constructor
