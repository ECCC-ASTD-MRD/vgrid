program constructor

  use vGrid_Descriptors, only: vgrid_descriptor,vgd_new,VGD_ERROR,VGD_OK
  use Unit_Testing, only: ut_report

  implicit none

  type(vgrid_descriptor) :: d
  integer :: lu=0,ier,fstinl, ni, nj, nk
  integer :: stat
  integer :: fnom,fstouv,fstfrm,infon
  integer, parameter :: nmax=1000
  integer, dimension(nmax) :: liste
  logical :: ok  

  stat=fnom(lu,"data/dm_5002_from_model_run-interp_dup","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort
  endif
  
  ! The following must produce an error since there are more than one !! matching
  ! Construct a new set of 3D coordinate descriptors
  stat = vgd_new(d,unit=lu,format="fst",ip1=-1,ip2=-1)

  call ut_report(stat==VGD_ERROR,'Grid_Descriptors, vgd_new, vgd_get CA')

  stat=fstfrm(lu)

end program constructor
