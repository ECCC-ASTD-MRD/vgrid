program constructor
  use Grid_Descriptors, only: grid_descriptor,gd_new,gd_get
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer, parameter :: lu=10
  integer :: stat
  integer :: fnom,fstouv,fstfrm
  real*8, dimension(:), pointer :: my_a
  logical :: ok

  stat=fnom(lu,"data/dm_5002_from_model_run","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort
  endif

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,unit=lu,format="fst",ip1=2009,ip2=1000)

  stat = gd_get(d,key='CA_M - vertical A coefficient (m)',value=my_a)
  ok=.false.
  if(size(my_a).gt.0)ok=.true.
  
  call ut_report(ok,'Grid_Descriptors, gd_new, gd_get CA')

  stat=fstfrm(lu)

end program constructor
