program constructor

  ! Revision : Andre Plante test on B instead of A since A not sensitive to rcoefs

  use vGrid_Descriptors, only: vgrid_descriptor,vgd_new,vgd_get,vgd_print,VGD_ERROR
  use Unit_Testing, only: ut_report

  implicit none

  type(vgrid_descriptor) :: d
  integer :: stat,ind
  real :: epsilon=1.e-6
  real, dimension(57) :: hyb=(/0.0134575, 0.0203980, 0.0333528, 0.0472815, 0.0605295, 0.0720790, &
       0.0815451, 0.0889716, 0.0946203, 0.0990605, 0.1033873, 0.1081924, &
       0.1135445, 0.1195212, 0.1262188, 0.1337473, 0.1422414, 0.1518590, &
       0.1627942, 0.1752782, 0.1895965, 0.2058610, 0.2229843, 0.2409671, &
       0.2598105, 0.2795097, 0.3000605, 0.3214531, 0.3436766, 0.3667171, &
       0.3905587, 0.4151826, 0.4405679, 0.4666930, 0.4935319, 0.5210579, &
       0.5492443, 0.5780612, 0.6074771, 0.6374610, 0.6679783, 0.6989974, &
       0.7299818, 0.7591944, 0.7866292, 0.8123021, 0.8362498, 0.8585219, &
       0.8791828, 0.8983018, 0.9159565, 0.9322280, 0.9471967, 0.9609448, &
       0.9735557, 0.9851275, 0.9950425/)
  real :: rcoef1=0.,rcoef2=1.
  logical :: status_l
  
  real*8 :: ptop=805d0,pref=100000d0
  real*8, dimension(:), pointer :: a_t_8,b_t_8
  real, dimension(:), pointer :: hyb_t

  ! Construct a new set of vertical coordinate descriptors
  stat = vgd_new(d,kind=5,version=2,hyb=hyb,rcoef1=rcoef1,rcoef2=rcoef2,ptop_8=ptop,pref_8=pref,tbatub_l=.true.)
  stat = vgd_get(d,key='CB_T - vertical B coefficient (t)',value=b_t_8)
  stat = vgd_get(d,key='CA_T - vertical A coefficient (t)',value=a_t_8)
  stat = vgd_get(d,key='VCDT - vertical coordinate (t)'   ,value=hyb_t) 
  ind=size(b_t_8)-1

  print*,b_t_8(ind)  ,' should equal ',0.9999989372362508d0
  print*,a_t_8(ind)  ,' should equal ',11.50795563853642d0
  print*,hyb_t(ind),' should equal ',0.995043

  status_l=abs(b_t_8(ind)-0.9999989372362508d0) < epsilon .and. &
           abs(a_t_8(ind)-11.50795563853642d0 ) < epsilon .and. &
           abs(hyb_t(ind)-0.995043 ) < epsilon

  call ut_report(status_l,'Grid_Descriptors::vgd_new vertical generate initializer (5002) value tbatub_L=T')

end program constructor
