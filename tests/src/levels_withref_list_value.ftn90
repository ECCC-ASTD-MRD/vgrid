program tests
  use Grid_Descriptors, only: grid_descriptor,gd_new,gd_levels
  use Unit_Testing, only: ut_report

  implicit none

  integer :: stat,lu=0,i,ni,nj,nk,fnom,fstouv,fstfrm,fclos,fstlir,fstinl,count,fstprm, &
       dateo,deet,npas,nbits,datyp,ip2,ip3,ig1,ig2,ig3,ig4,swa,lng,dltf,ubc,ex1,ex2,ex3
  integer :: testLev=10
  integer, dimension(100) :: fstkeys
  integer, dimension(:), allocatable :: ip1s
  real :: epsilon=.001
  real, dimension(:,:), allocatable :: p0,px
  real, dimension(:,:,:), pointer :: lev
  character(len=12) :: typvar,nomvar,etiket,grtyp
  type(grid_descriptor) :: d

  stat=fnom(lu,"data/dm_5002_from_model_run","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.lt.0)then
     print*,'No record in RPN file'
     call abort
  endif

  ! Get physical levelling information
  stat = gd_new(d,unit=lu,format="fst",ip1=2009,ip2=1000)
  stat = fstinl(lu,ni,nj,nk,-1,'',-1,-1,-1,'','TT',fstkeys,count,size(fstkeys))
  allocate(ip1s(count))
  do i=1,count
     stat = fstprm(fstkeys(i),dateo,deet,npas,ni,nj,nk,nbits,datyp,ip1s(i), &
          ip2,ip3,typvar,nomvar,etiket,grtyp,ig1,ig2,ig3,ig4,swa,lng,dltf,  &
          ubc,ex1,ex2,ex3)
  enddo
  allocate(p0(ni,nj))
  stat = fstlir(p0,lu,ni,nj,nk,-1,'',-1,-1,-1,'','P0')
  p0 = p0*100. !mb to Pa
  allocate(px(ni,nj))
  stat = fstlir(px,lu,ni,nj,nk,-1,'',ip1s(testLev),-1,-1,'','PX')
  stat = gd_levels(d,sfc_field=p0,ip1_list=ip1s,levels=lev)
  call ut_report(abs(lev(22,15,testLev)/100.-px(22,15))<epsilon,message='Grid_Descriptors::gd_levels level calculation status')

  stat=fstfrm(lu)
  stat=fclos(lu)

end program tests
