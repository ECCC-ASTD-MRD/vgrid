program constructor

  use Grid_Descriptors, only: grid_descriptor,gd_new
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer :: lu=0
  integer :: stat
  integer :: fnom,fstouv,fstfrm
  logical :: ok

  stat=fnom(lu,"data/dm_5002_from_model_run-interp","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort
  endif

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,unit=lu,format="fst",ip1=-1,ip2=-1)
  call ut_report(stat,'Grid_Descriptors, gd_new, gd_get CA')

  stat=fstfrm(lu)

end program constructor
