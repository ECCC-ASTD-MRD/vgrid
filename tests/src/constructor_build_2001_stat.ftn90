program constructor
  use Grid_Descriptors, only: grid_descriptor,gd_new,GD_ERROR
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer :: stat
  real(kind=8), dimension(4) :: pres=(/1000.,925.,850.,700./)

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,kind=2,version=1,nk=size(pres),ip1_m=int(pres),a_m_8=pres,b_m_8=pres)
  call ut_report(stat,'Grid_Descriptors::gd_new vertical build initializer (2001)')

end program constructor
