program constructor
  use Grid_Descriptors, only: grid_descriptor,gd_new,write_desc
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer, parameter :: lu=10,lu2=20
  integer :: stat
  integer :: fnom,fstouv,fstfrm
  real*8, dimension(:), pointer :: my_a
  logical :: ok

  stat=fnom(lu,"data/dm_5002_from_model_run","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort
  endif

  stat=fnom(lu2,"data/toc_toc.rpn","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom toc toc'
     call abort
  endif
  stat=fstouv(lu2,'RND')

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,unit=lu,format="fst",ip1=2009,ip2=1000)
  stat = write_desc(d,unit=lu2,format="fst")
  call ut_report(stat,'Grid_Descriptors, gd_new, gd_get CA')

  stat=fstfrm(lu)
  stat=fstfrm(lu2)

end program constructor
