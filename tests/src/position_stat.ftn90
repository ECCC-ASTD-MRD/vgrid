program tests
  use vGrid_Descriptors, only: vgrid_descriptor,vgd_new,vgd_position
  use Unit_Testing, only: ut_report

  implicit none

  type(vgrid_descriptor) :: d
  integer :: stat
  real, dimension(:,:), pointer :: lat,lon

  ! Construct a new set of 3D coordinate descriptors
  stat = vgd_new(d,unit=10,format='fst',ip1=100,ip2=200)

  ! Get information about the coordinate
  stat = vgd_position(d,lat=lat,lon=lon)
  call ut_report(stat,message='Grid_Descriptors::vgd_position get horizontal position stat')

end program tests
