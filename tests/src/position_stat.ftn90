program tests
  use Grid_Descriptors, only: grid_descriptor,gd_new,gd_position
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer :: stat
  real, dimension(:,:) :: lat,lon

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,unit=10,format='fst',ip1=100,ip2=200)

  ! Get information about the coordinate
  stat = gd_position(d,lat=lat,lon=lon)
  call ut_report(stat,message='Grid_Descriptors::gd_position get horizontal position stat')

end program tests
