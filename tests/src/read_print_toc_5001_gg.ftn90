program constructor
  use Grid_Descriptors, only: grid_descriptor,gd_new,gd_print,GD_OK
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer, parameter :: lu=10
  integer :: stat
  integer :: fnom,fstouv,fstfrm
  logical :: ok

  stat=fnom(lu,"data/gg_5001_from_model_run_plus_toc","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort
  endif

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,unit=lu,format="fst",ip1=-1,ip2=-1)
  if(stat.ne.GD_OK)then
     print*,'ERROR: problem with gd_new'
     stat=fstfrm(lu)
     call abort
  endif
  stat = gd_print(d)
 
  call ut_report(stat,'Grid_Descriptors, gd_new, gd_print 5001')

  stat=fstfrm(lu)

end program constructor
