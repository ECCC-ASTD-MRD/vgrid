program tests
  use vGrid_Descriptors, only: grid_descriptor,gd_new,gd_get,gd_put,GD_LEN_NAME
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer :: stat,fstkey,lu=0,fnom,fstouv,fstfrm,fclos,lutxt=69,ip1,ip2
  real, dimension(:,:,:), allocatable :: lev
  character(len=GD_LEN_NAME) :: rfld

  stat=fnom(lu,"data/dm_5002_from_model_run","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort
  endif
  open(unit=lutxt,file='data/dm_5002_ips.txt',status='OLD')
  read(lutxt,*) ip1,ip2
  close(lutxt)

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,unit=lu,format="fst",ip1=ip1,ip2=ip2)

  ! Change an element of the structure
  stat = gd_put(d,key='RFLD - reference field name',value='TEST')
  stat = gd_get(d,key='RFLD - reference field name',value=rfld)
  call ut_report(rfld=='TEST',message='Grid_Descriptors::gd_put put character value')

  stat = fstfrm(lu)
  stat = fclos(lu)

end program tests
