program tests
  use Grid_Descriptors, only: grid_descriptor,gd_new,gd_write
  use Unit_Testing, only: ut_report

  implicit none

  type(grid_descriptor) :: d
  integer :: stat,lu=0

  integer, external :: fnom,fstouv,fclos,fstfrm

  ! Open test file
  stat=fnom(lu,"data/dm_5002_from_model_run","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort()
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort()
  endif

  ! Construct a new set of 3D coordinate descriptors
  stat = gd_new(d,unit=lu,format="fst",ip1=2009,ip2=1000)

  ! Print information about the instance
  stat = gd_write(d,unit=lu,format='fst')
  call ut_report(stat,message='Grid_Descriptors::gd_write write descriptors')

end program tests
