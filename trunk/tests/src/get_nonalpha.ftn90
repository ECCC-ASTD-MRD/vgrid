program tests
  use vGrid_Descriptors, only: vgrid_descriptor,vgd_new,vgd_get,VGD_LEN_NAME
  use Unit_Testing, only: ut_report

  implicit none

  type(vgrid_descriptor) :: d
  integer :: stat,lu=10,lutxt=69,ip1,ip2
  real*8, dimension(:), pointer :: coef_a_m_8

  integer, external :: fnom,fstouv,fclos,fstfrm

  ! Open test file
  stat=fnom(lu,"data/dm_5002_from_model_run","RND",0)
  if(stat.lt.0)then
     print*,'ERROR with fnom'
     call abort()
  endif
  stat=fstouv(lu,'RND')
  if(stat.le.0)then
     print*,'No record in RPN file'
     call abort()
  endif
  open(unit=lutxt,file='data/dm_5002_ips.txt',status='OLD')
  read(lutxt,*) ip1,ip2
  close(lutxt)

  ! Construct a new set of 3D coordinate descriptors
  stat = vgd_new(d,unit=lu,format="fst",ip1=ip1,ip2=ip2)

  ! Get information about the coordinate
  stat = vgd_get(d,key='CA_M - vertical A coefficient (M)',value=coef_a_m_8)
  call ut_report(stat,message='Grid_Descriptors::vgd_get non-alphanumeric entry')

  ! Close files
  stat = fstfrm(lu)
  stat = fclos(lu)

end program tests
